
@using TRM.Web.Constants
@using TRM.Web.Models.Layouts

@model Hephaestus.CMS.ViewModels.IPageViewModel<TRM.Web.Models.Pages.EcomPrototypePage, Hephaestus.CMS.ViewModels.ILayoutModel>
@{
    var myLayout = Model.Layout as TrmLayoutModel;
    if (myLayout == null)
    {
        throw new InvalidCastException(StringConstants.Layout.InvalidLayout);
    }
}
<div class="pageContainer">

    @Html.Partial("_Breadcrumb", myLayout.Breadcrumb)

    @Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.TopContent)
    @if (Model.CurrentPage.DisplayPageHeading)
    {
        <div class="page-header">
            @Html.PropertyFor(m => m.CurrentPage.Heading)
        </div>
    }
    @Html.PropertyFor(m => m.CurrentPage.MainBody)

    <div class="container mb-2x">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-md-4">
                    <a class="btn btn-default btn-block sidenav-trigger mb-2x hidden-md hidden-lg mt-xs-2x" data-target="#catFilters">Account Menu</a>
                </div>
            </div>
        </div>
        <aside class="mobile-sidenav col-md-3" id="catFilters">
            <a class="btn btn-default pull-right visible-sm visible-xs closeButton"><i class="trmi trmi-close"></i></a>
            <div class="row">
                <div class="account navigationBlock col-xs-12" id="account-menu">
                    <div class="blockContent">
                        <ul class="level0 contentNav">
                            <li class="">
                                <a href="#" title="My Account">My Account</a>
                            </li>
                            <li class="has-children">
                                <a class="btn-collapse" data-target="#page-menu-1" data-toggle="collapse" title="Show/Hide More">Your Orders</a>
                                <ul class="level1 collapse in" id="page-menu-1">
                                    <li>
                                        <a href="/my-account/your-orders/how-to-return-an-item/" title="How to Return an item">How to Return an item</a>
                                    </li>
                                    <li>
                                        <a href="/my-account/your-orders/view-closed-orders/" title="View Closed Orders">View Closed Orders</a>
                                    </li>
                                    <li>
                                        <a href="/my-account/your-orders/view-open-orders/" title="View Open Orders">View Open Orders</a>
                                    </li>
                                </ul>
                            </li>
                            <li class=" has-children">
                                <a class="btn-collapse" data-target="#your-orders1" data-toggle="collapse" title="Show/Hide More">Investments</a>
                                <ul class="level1 collapse in" id="your-orders1">
                                    <li>
                                        <a href="#" title="Manage Vaulted Holdings">Manage Vaulted Holdings</a>
                                    </li>
                                    <li>
                                        <a href="#" title="View Statement History">View Statement History</a>
                                    </li>
                                    <li>
                                        <a href="#" title="View Transaction History">View Transaction History</a>
                                    </li>
                                    <li>
                                        <a href="#" title="Manage Your Bank Account Details">Manage Your Bank Account Details</a>
                                    </li>
                                    <li>
                                        <a href="#" title="Withdraw Funds from Wallet">Withdraw Funds from Wallet</a>
                                    </li>
                                    <li>
                                        <a href="#" title="Add Funds To Wallet">Add Funds To Wallet</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="has-children">
                                <a class="btn-collapse" data-target="#page-menu-2" data-toggle="collapse" title="Show/Hide More">Contact and Delivery</a>
                                <ul class="level1 collapse in" id="page-menu-2">
                                    <li>
                                        <a href="#" title="Change Password">Change Password</a>
                                    </li>
                                    <li>
                                        <a href="#" title="Contact Preferences">Contact Preferences</a>
                                    </li>
                                    <li>
                                        <a href="#" title="Manage Addresses">Manage Addresses</a>
                                    </li>
                                    <li>
                                        <a href="#" title="Edit personal Details">Edit personal Details</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="has-children">
                                <a class="" title="Show/Hide More">Wishlist</a>
                                <ul class="level1 collapse in" id="page-menu-1"></ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </aside>
        <div class="col-xs-12 col-md-9 mb-xs-2x">
            <div class="header-wrapper">
                <div class="page-header">
                    <h1>Change Login Details</h1>
                </div>
            </div>
            <div class="row mb-1x">
                <div class="col-xs-12">
                    @Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.MiddleContent)
                </div>
            </div>
            <div class="panel panel-default panel-secondary">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12 mb-1x mb-xs-0x">
                            <h3 class="mt-0">Username</h3>
                            <p>To change your username please contact our customer services team on 0123 567 891</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 mb-1x">
                            <label class="control-label col-xs-12 no-padding">Username <span class="text-danger">*</span></label>
                            <p>MetalMadMax</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 mb-1x mb-xs-0x">
                            <h3 class="mt-0">Security Question</h3>
                            <div class="row mb-1x">
                                <label class="control-label col-xs-12">Security Question <span class="text-danger">*</span></label>
                                <div class="col-xs-12 col-sm-8">
                                    <div class="select-form">
                                        <select class="form-control form-control--selected" id="securityQuestion" name="securityId">
                                            <option selected="selected" value="1">
                                                In what city or tow dit your mother and father meet?
                                            </option>
                                            <option value="2">
                                                What was your childhood nickname?
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-1x">
                                <label class="control-label col-xs-12">Answer <span class="text-danger">*</span></label>
                                <div class="col-xs-12 col-sm-8">
                                    <input class="form-control col-xs-12" name="name" type="text" value="Newcastle">
                                </div>
                            </div>
                            <div class="row mb-1x">
                                <label class="control-label col-xs-12">Confirm Answer <span class="text-danger">*</span></label>
                                <div class="col-xs-12 col-sm-8">
                                     <input class="form-control col-xs-12" name="name" type="text" value="Newcastle">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 mb-1x mb-xs-0x">
                            <h3 class="mt-0">Password</h3>
                            <div class="mb-1x mb-xs-0x">
                                <div class="row mb-1x">
                                    <label class="control-label col-xs-12">Please enter your new password</label>
                                    <div class="col-xs-12 col-sm-8">
                                        <input class="form-control" name="name" type="text" value="">
                                    </div>
                                </div>
                                <div class="row mb-1x">
                                    <label class="control-label col-xs-12">Please confirm your new password</label>
                                    <div class="col-xs-12 col-sm-8">
                                        <input class="form-control col-xs-12" name="name" type="text" value="">
                                    </div>
                                </div>
                                <div class="row mb-1x">
                                    <label class="control-label col-xs-12">Enter current Password <span class="text-danger">*</span></label>
                                    <div class="col-xs-12 col-sm-8">
                                       <input class="form-control col-xs-12" name="name" type="text" value="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <button class="btn btn-secondary col-1">Save</button>
                        </div>
                    </div>
                    <div class="col-xs-12 mt-1x">
                        @Html.PropertyFor(m => m.CurrentPage.EcomPrototypeContentArea)
                    </div>
                    
                </div>
            </div>
            
        </div>
    </div>
    @Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.BottomContent)
</div>

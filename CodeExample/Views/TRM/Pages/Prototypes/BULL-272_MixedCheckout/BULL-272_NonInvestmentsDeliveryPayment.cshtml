@using TRM.Web.Constants
@using TRM.Web.Models.Layouts

@model Hephaestus.CMS.ViewModels.IPageViewModel<TRM.Web.Models.Pages.EcomPrototypePage, Hephaestus.CMS.ViewModels.ILayoutModel>
@{
	var myLayout = Model.Layout as TrmLayoutModel;
	if (myLayout == null)
	{
		throw new InvalidCastException(StringConstants.Layout.InvalidLayout);
	}
}
<div class="pageContainer">
	<div class="container mb-4x mt-2x">
		<div class="page-header">
			<h1 class="h1">Step 2: Non-Investments Payment</h1>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ol class="nav nav-bar nav-progress-bar mb-2x mixed-checkout-nav">
					<li><a href="">1.<span>Delivery</span></a></li>
					<li class="active"><a href="">2. <span>Payment</span></a> </li>
					<li><a href="">3. <span>Delivery and Payment</span></a></li>
					<li>4. <span>Confirmation</span> </li>
				</ol>
			</div>
			<div class="col-xs-12 col-sm-7 mb-2x">
				<h3 class="mt-0">Payment Details</h3>
				<p class="mb-1x header-font-color">Please note you secure wallet can not be used to pay for Coins and Gifts</p>
				<form id="checkoutForm" method="post" name="checkoutForm">
					<h5 class="h5">Billing Address</h5>
					<div class="checkbox small fancy">
						<input type="checkbox" name="SameAsDelivery" checked disabled id="sameAsDelivery">
						<label for="sameAsDelivery">
							Same as delivery address?
						</label>
						<p class="help-block text-slateblue">
							<strong>Selected delivery address:</strong><br>
							Delivery Address: Selected address
						</p>
					</div>
					<hr>
					<div class="newCard">
						<div class="row">
							<div class="col-xs-12">

								<div class="row gutter-sm">
									<div class="col-xs-12">
										<div class="form-group">
											<div class="checkbox small fancy">
												<input type="checkbox" id="rememberCard" data-original-title="" title="">
												<label for="rememberCard">Remember this card for next time</label>
											</div>
										</div>
									</div>
									<div class="col-xs-12 col-md-6">
										<div class="form-group has-feedback cardNo" id="cardNo">
											<label for="card-number">
												Card Number
												<span class="text-danger">
													*
												</span>
											</label>
											<input type="text" class="form-control gw-proxied" id="card-number" placeholder="eg.1111 2222 3333 4444" data-original-title="" title="">
											<span class="cardNoSpan trmi form-control-feedback hidden" id="cardNoSpan" aria-hidden="true"></span>
											<div class="cardNoErrorMessage form-group has-error mb-0 hidden" id="cardNoErrorMessage">
												<span class="help-block"><i class="trmi trmi-times"></i>Please enter your card number.</span>
											</div>
										</div>
									</div>
									<div class="col-xs-12 col-md-4">
										<label>End date</label>
									</div>
									<div class="col-xs-6 col-md-3">
										<div class="select-form expiryMonth" id="expiryMonth">
											<select class="form-control" id="expiry-month">
												<option value="" selected="">MM</option>
												<option value="01">01</option>
												<option value="02">02</option>
												<option value="03">03</option>
												<option value="04">04</option>
												<option value="05">05</option>
												<option value="06">06</option>
												<option value="07">07</option>
												<option value="08">08</option>
												<option value="09">09</option>
												<option value="10">10</option>
												<option value="11">11</option>
												<option value="12">12</option>
											</select>
											<div class="cardExpiryMonthErrorMessage form-group has-error mb-0 hidden" id="cardExpiryMonthErrorMessage">
												<span class="help-block"><i class="trmi trmi-times"></i> "Please enter the expiry month on your card."</span>
											</div>
										</div>
									</div>
									<div class="col-xs-6 col-md-3">
										<div class="select-form expiryYear" id="expiryYear">
											<select class="form-control " id="expiry-year" onchange="PaymentSession.updateSessionFromForm('card');">
												<option value="" selected="">YYYY</option>
												<option value="2018">2018</option>
												<option value="2019">2019</option>
												<option value="2020">2020</option>
												<option value="2021">2021</option>
												<option value="2022">2022</option>
												<option value="2023">2023</option>
												<option value="2024">2024</option>
												<option value="2025">2025</option>
												<option value="2026">2026</option>
												<option value="2027">2027</option>
												<option value="2028">2028</option>
												<option value="2029">2029</option>
												<option value="2030">2030</option>
												<option value="2031">2031</option>
												<option value="2032">2032</option>
												<option value="2033">2033</option>
												<option value="2034">2034</option>
												<option value="2035">2035</option>
												<option value="2036">2036</option>
												<option value="2037">2037</option>
												<option value="2038">2038</option>
											</select>
											<div class="cardExpiryYearErrorMessage form-group has-error mb-0 hidden" id="cardExpiryYearErrorMessage">
												<span class="help-block"><i class="trmi trmi-times"></i>"Please enter the expiry year on your card."</span>
											</div>
										</div>
									</div>
								</div>

								<div class="form-group has-feedback">
									<label for="nameOnCard">
										Name on Card<small> (Exactly as it appears on the card)</small><span class="text-danger">*</span>
									</label>
									<input type="text" class="form-control" id="nameOnCard" name="nameOnCard" placeholder="Name on Card" required="required" data-original-title="" title="">
									<span class="trmi form-control-feedback"></span>
									<div class="form-group has-error hidden mb-0">
										<span class="help-block"><i class="trmi trmi-times"></i>Please enter your card name exactly as it appears on the card.</span>
									</div>
								</div>
								<div class="row">
									<div class="col-xs-6 col-sm-4">
										<div class="form-group">
											<label for="cardCCV1">CCV Number <span class="text-danger">*</span></label>
											<input type="text" class="form-control" id="cardCCV1" placeholder="XXX" data-original-title="" title="">
										</div>
									</div>
									<div class="col-xs-4 col-sm-2 form-helper label-padding">
										<i class="trmi trmi-question h5 mt-0 mb-0" data-toggle="tooltip" data-placement="top" title="" data-original-title="Last 3 digits on the back of the card"></i>
									</div>
								</div>
							</div>
						</div>
					</div>
					<hr />
					<div class="row">
						<div class="col-xs-12">
							<div class="checkbox small fancy mb-0">
								<input type="checkbox" id="term">
								<label for="term">By placing an order you agree to The Royal Mint's <a href="" title="Terms &amp; Conditions">Terms &amp; Conditions.</a></label>
							</div>
						</div>
					</div>
					<hr>
					<div class="form-group">
						<div class="wysiwyg mb-1x">
							<p>The Royal Mint would be like to keep you up to date with information about our competitions, products, services, offers and news that may interest you. Please tick the relevant boxes, by doing so you are acknowledging that you are above the age of 16 and consent to being contacted in the manner described.</p>
						</div>

						<div class="checkbox fancy checkbox-inline">
							<input type="checkbox" name="UserRegistration.ByEmail" id="UserRegistration.ByEmail" value="true" data-original-title="" title="" class="ng-pristine ng-untouched ng-valid ng-empty">
							<label class="checkbox-inline" for="UserRegistration.ByEmail">By Email</label>
						</div>
						<div class="checkbox fancy checkbox-inline">
							<input type="checkbox" name="UserRegistration.ByPost" id="UserRegistration.ByPost" value="true" data-original-title="" title="" class="ng-pristine ng-untouched ng-valid ng-empty">
							<label class="checkbox-inline" for="UserRegistration.ByPost">By Post</label>
						</div>
						<div class="checkbox fancy checkbox-inline">
							<input type="checkbox" name="UserRegistration.ByTelephone" id="UserRegistration.ByTelephone" value="true" data-original-title="" title="" class="ng-pristine ng-untouched ng-valid ng-empty">
							<label class="checkbox-inline" for="UserRegistration.ByTelephone">By Telephone</label>
						</div>
					</div>
					<hr>
					<div class="checkout-total mb-20">
						<div class="row">
							<div class="col-xs-6 col-md-3 col-md-offset-6 text-right">
								<strong>Retail Sub Total</strong>
							</div>
							<div class="col-xs-6 col-md-3 text-right">
								£30.00
							</div>
							<div class="clearfix"></div>
							<div class="col-xs-6 col-md-3 col-md-offset-6 text-right">
								<strong>Retail Delivery</strong>
							</div>
							<div class="col-xs-6 col-md-3 text-right">
								£20.00
							</div>
							<div class="clearfix"></div>
							<div class="col-xs-12">
								<hr>
							</div>
							<div class="col-xs-6 col-md-3 col-md-offset-6 text-right">
								<p class="h4 h3-lg-down strong mt-0 mb-0">Retail Total</p>
							</div>
							<div class="col-xs-6 col-md-3 text-right">
								<p class="hh4 h3-lg-down strong mt-0 mb-0">£50.00</p>
								<span class="small">(inc VAT)</span>
							</div>
						</div>
					</div>
					<button type="button" id="payNowButton" class="btn btn-secondary mb-1x">Pay Now and Continue to Investment</button>
					<p>Next Step: Investment Delivery and Payment</p>
				</form>
			</div>
			<div class="col-xs-12 col-sm-5 mb-2x">
				@Html.Partial("InvestmentOrderSummary")
				@Html.Partial("InvestmentRetailOrderSummary")
			</div>
		</div>
	</div>
</div>
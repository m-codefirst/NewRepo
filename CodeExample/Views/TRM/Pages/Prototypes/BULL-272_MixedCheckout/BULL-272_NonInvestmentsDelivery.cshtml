@using TRM.Web.Constants
@using TRM.Web.Models.Layouts

@model Hephaestus.CMS.ViewModels.IPageViewModel<TRM.Web.Models.Pages.EcomPrototypePage, Hephaestus.CMS.ViewModels.ILayoutModel>
@{
	var myLayout = Model.Layout as TrmLayoutModel;
	if (myLayout == null)
	{
		throw new InvalidCastException(StringConstants.Layout.InvalidLayout);
	}
}
<div class="pageContainer">
	<div class="container mb-4x mt-2x">
		<div class="page-header">
			<h1 class="h1">Step 1: Non-Investments Delivery</h1>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ol class="nav nav-bar nav-progress-bar mb-2x mixed-checkout-nav">
					<li class="active"><a href="">1.<span>Delivery</span></a></li>
					<li><a href="">2. <span>Payment</span></a> </li>
					<li><a href="#">3. <span>Delivery and Payment</span></a></li>
					<li>4. <span>Confirmation</span> </li>
				</ol>
			</div>
			<div class="col-xs-12 col-sm-7">
				<div class="row">
					<div class="col-xs-12">
						<h3 class="h3 mt-0">Please checkout your non-Investment Items first</h3>
						<h5 class="h5 mt-20">Retail Basket Delivery Details</h5>
						<p>Please note Items in your basket may be delivered separately</p>
						<form>
							<div class="form-group">
								<label class="control-label" for="recipientName">Recipients Full Name<span class="text-danger">@Html.TranslateFallback(StringResources.FormRequiredAsterisk, "*")</span></label>
								<input type="text" id="recipientName" value="Holli Barrett" name="recipientName" class="form-control width-80" />
							</div>
							<div class="form-group">
								<label class="control-label" for="checkoutSelectAdress">Choose your delivery address</label>
								<div class="select-form width-80">
									<select class="form-control ng-valid ng-not-empty ng-dirty ng-valid-parse ng-touched" id="checkoutSelectAdress">
										<option value="">-- Please Select --</option>
										<option value="new" ng-click="">-- New Address --</option>										
										<option value="0" selected class="ng-binding ng-scope">Holli Barrett: 1 St. Leonards Drive</option>
									</select>
								</div>
							</div>
							<div id="selectedDeliveryAddress">
								<h5>Your delivery address</h5>
								<div class="panel panel-default">
									<div class="panel-body ng-binding">
										1 St. Leonards Drive <br />
										Timperley <br />
										Altrincham <br />
										WA15 7RS <br />
										GBR
									</div>
								</div>
							</div>
							<hr />
							<div class="delivery-options">
								<h4>Delivery Options</h4>
								<p>
									Choose your delivery method. Order before 1pm for special delivery, where available.<span class="text-danger">*</span>
								</p>

								<div class="checkbox small fancy">
									<input type="radio" name="deliveryMethod" id="chkDel0" checked>
									<label for="chkDel0">
										Standard - £0.00
									</label>
								</div>
								<hr />
								<div class="form-group">
									<div class="checkbox fancy">
										<input type="checkbox" name="gift" id="gift">
										<label class="checkbox-inline" for="gift">This a gift</label>
									</div>
								</div>
								<button type="submit" class="btn btn-secondary mb-1x" style="">Next</button>
								<p>Next step: Payment and billing information</p>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class="col-xs-12 col-sm-5">
				@Html.Partial("InvestmentOrderSummary")
				@Html.Partial("InvestmentRetailOrderSummary")
			</div>
		</div>
	</div>
</div>
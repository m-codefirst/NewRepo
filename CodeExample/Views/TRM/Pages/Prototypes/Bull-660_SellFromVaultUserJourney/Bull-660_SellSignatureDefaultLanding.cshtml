@using TRM.Web.Constants
@using TRM.Web.Models.Layouts

@model Hephaestus.CMS.ViewModels.IPageViewModel<TRM.Web.Models.Pages.EcomPrototypePage, Hephaestus.CMS.ViewModels.ILayoutModel>
@{
	var myLayout = Model.Layout as TrmLayoutModel;
	if (myLayout == null)
	{
		throw new InvalidCastException(StringConstants.Layout.InvalidLayout);
	}
}
<div class="pageContainer sell-vault-user">
	<div class="row">
		@Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.TopContent)
	</div>
	<div class="container mb-4x mt-2x">
		<div class="row">
			<div class="col-xs-12 col-md-8 col-md-offset-2 mb-1x">
				<div class="page-header">
					<h1 class="h1">Sell back to Royal Mint</h1>
				</div>
				<h2 class="h3">We will update funds to your investment wallet once the sale is complete.</h2>
				<p>Please confirm what you would like to sell today:</p>
				<div id="sell-options" class="sell-options mb-2x">
					<div class="checkbox small fancy">
						<input type="radio" name="sellOption" id="chkDel2" value="Value" checked>
						<label for="chkDel2">
							<span class="strong inline text-midblue">Define an approx value to sell</span>
						</label>
					</div>
					<div id="calculate-value" class="calculate-form">
						<form id="sell-value-calculation">
							<div class="row">
								<div class="col-xs-6 col-sm-4">
									<strong>Available to sell (oz):</strong>
								</div>
								<div class="col-xs-6 col-sm-2 text-right">
									14232.247
								</div>
								<div class="clearfix"></div>
								<div class="col-xs-6 col-sm-4 mb-1x">
									<strong>Approx Valuation:</strong>
								</div>
								<div class="col-xs-6 col-sm-2 mb-1x text-right">
									£14,142,947.00
								</div>
								<div class="clearfix"></div>
								<div class="col-xs-12 col-sm-6 mb-1x">
									<div class="input-group border-gray mb-0">
										<div class="input-group-addon">£</div>
										<input type="number" class="form-control" id="sellValue" value="100.00" placeholder="Amount" data-original-title="" title="">
									</div>
								</div>
								<div class="col-xs-12 col-sm-3 mb-1x">
									<button type="submit" class="btn btn-default">Calculate</button>
								</div>
							</div>
						</form>
					</div>
					<div class="checkbox small fancy">
						<input type="radio" name="sellOption" id="chkDel1" value="Weight">
						<label for="chkDel1">
							<span class="strong inline text-midblue">Define a weight (oz) to sell</span>
						</label>
					</div>
					<div id="calculate-weight" class="calculate-form hidden">
						<form id="sell-weight-calculation">
							<div class="row">
								<div class="col-xs-6 col-sm-4">
									<strong>Available to sell (oz):</strong>
								</div>
								<div class="col-xs-6 col-sm-2 text-right">
									14232.247
								</div>
								<div class="clearfix"></div>
								<div class="col-xs-6 col-sm-4 mb-1x">
									<strong>Approx price per oz:</strong>
								</div>
								<div class="col-xs-6 col-sm-2 mb-1x text-right">
									£992.25
								</div>
								<div class="clearfix"></div>
								<div class="col-xs-12 col-sm-6 mb-1x">
									<div class="input-group border-gray mb-0">
										<input type="number" class="form-control" id="sellWeight" value="14232.247" placeholder="Amount" data-original-title="" title="">
										<div class="input-group-addon">ounces</div>
									</div>
								</div>
								<div class="col-xs-12 col-sm-3 mb-1x">
									<button type="submit" class="btn btn-default">Calculate</button>
								</div>
							</div>
						</form>
					</div>
					<div class="checkbox small fancy">
						<input type="radio" name="sellOption" id="chkDel0" value="Default">
						<label for="chkDel0">
							<span class="strong inline text-midblue">Sell all my Vault Holding for this Metal</span>
						</label>
					</div>
				</div>
				<div class="row">
					@Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.MiddleContent)
				</div>
				<h2 id="sell-back-detail" class="h3">Sell back details</h2>
				<div class="checkout-item-block">
					<div class="checkout-item-wrapper">
						<div class="item-image hidden-xs">
							<img src="/Static/img/bullion/signature-gold-logo.jpg" />
						</div>
						<div class="item-info">
							<h6 class="h6 mt-0">Signature Gold</h6>
							<div class="row">
								<div class="col-xs-8">
									<strong>Weight in vault (oz):</strong>
								</div>
								<div class="col-xs-4 text-right">
									14232.247
								</div>
								<div class="clearfix"></div>
								<div class="col-xs-8">
									<strong>Available to sell (oz):</strong>
								</div>
								<div class="col-xs-4 text-right">
									14232.247
								</div>
							</div>
						</div>
						<div class="item-price flex-align-left-sm-up primary-price">
							<div class="price-info">
								<p class="strong mt-0 mb-0 text-center">Weight in sale (oz)</p>
								<p class="mt-0 mb-0 text-center">
									14232.247
								</p>
							</div>
						</div>
					</div>
				</div>
				<div class="checkout-total">
					<div class="row">
						<div class="col-xs-6 col-sm-4 col-sm-offset-5 text-right-sm-up">
							<strong>Price per Oz including premium</strong>
						</div>
						<div class="col-xs-6 col-sm-3 text-right-sm-up">
							£992.25
						</div>
						<div class="clearfix"></div>
						<div class="col-xs-6 col-sm-4 col-sm-offset-5 text-right-sm-up">
							<strong>Weight in sale (oz)</strong>
						</div>
						<div class="col-xs-6 col-sm-3 text-right-sm-up">
							14232.247
						</div>
						<div class="clearfix"></div>
						<hr>
					</div>
					<div class="row center-items-sm-up reorder-sm">
						<div class="col-xs-12 col-sm-6">
							<span class="h6 mt-0 mb-0 coundown-timer inline alert alert-info text-slateblue">
								LIVE Prices valid for <span class="h5" id="coundown-timer">0</span> seconds
							</span>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="row">
								<div class="col-xs-6">
									<p class="h4 h3-lg-down mt-0 mb-0 text-right-sm-up">Sell today for</p>
								</div>
								<div class="col-xs-6 text-right-sm-up">
									<p class="h4 h3-lg-down mt-0 mb-0">£999,999.999</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-10 col-md-5 pull-right-sm-up">
						<button type="button" class="btn btn-secondary btn-block mt-2x">Sell Now</button>
					</div>
				</div>
			</div>

		</div>
	</div>
	<div class="row">
		@Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.BottomContent)
	</div>
</div>
<script>
	// Set the date we're counting down to
	var today = new Date();
	var nextDay = new Date();
	nextDay.setDate(today.getDate() + 1);
	var countDownDate = nextDay.getTime();

	var totalSeconds = 180;
	document.getElementById("coundown-timer").innerHTML = totalSeconds;
	// Update the count down every 1 second
	var x = setInterval(function () {
		document.getElementById("coundown-timer").innerHTML = totalSeconds--;
		if (totalSeconds < 0)
			clearInterval(x);
	}, 1000);
</script>
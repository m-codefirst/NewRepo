@using TRM.Web.Constants
@using TRM.Web.Models.Layouts

@model Hephaestus.CMS.ViewModels.IPageViewModel<TRM.Web.Models.Pages.EcomPrototypePage, Hephaestus.CMS.ViewModels.ILayoutModel>
@{
	var myLayout = Model.Layout as TrmLayoutModel;
	if (myLayout == null)
	{
		throw new InvalidCastException(StringConstants.Layout.InvalidLayout);
	}

	var targetId = Guid.NewGuid();

}
<div class="pageContainer">
	<div class="row">
		@Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.TopContent)
	</div>
	<div class="container mb-4x mt-2x">
		<div class="row">
			<div class="col-xs-12 col-md-8 col-md-offset-2 mb-1x">
				<div class="page-header">
					<h1 class="h1 text-success">
						<i class="trmi trmi-check text-success mr-1x"></i>
						This Sale has been completed
					</h1>
				</div>
				<div class="alert alert-success">
					<span>Your sale has been processed with a price per oz of £992.25 and it will be added to your secure wallet within 5 working days. You will receive an email with your slae confirmation shortly.</span>
				</div>
				<h2 class="h3">Transaction Number</h2>
				<h3 class="h6 mb-2x strong">#OB-9A06794</h3>
				<div class="row">
					@Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.MiddleContent)
				</div>
				<h2 class="h3 mt-0">Sale Summary</h2>
				<div class="checkout-item-block">
					<div class="checkout-item-wrapper">
						<div class="item-image hidden-xs">
							<img src="/Static/img/bullion/signature-gold-logo.jpg" />
						</div>
						<div class="item-info">
							<h6 class="h6 mt-1x">Signature Gold</h6>
						</div>
						<div class="item-price flex-align-left-sm-up primary-price">
							<div class="price-info">
								<p class="strong mt-0 mb-0 text-center">Weight in sale (oz)</p>
								<p class="mt-0 mb-0 text-center">
									14232.247
								</p>
							</div>
						</div>
					</div>
				</div>
				<div class="checkout-total">
					<div class="row">
						<div class="col-xs-6 col-sm-4 col-sm-offset-4 text-right-sm-up">
							<strong>Weight in sale (oz)</strong>
						</div>
						<div class="col-xs-6 col-sm-4 text-right-sm-up">
							14232.247
						</div>
						<div class="clearfix"></div>
						<div class="col-xs-6 col-sm-4 col-sm-offset-4 text-right-sm-up">
							<strong>Price per oz including premium</strong>
						</div>
						<div class="col-xs-6 col-sm-4 text-right-sm-up">
							£992.25
						</div>
						<div class="clearfix"></div>
						<hr>
					</div>
					<div class="row center-items-sm-up">
						<div class="col-xs-12 col-sm-8 col-sm-offset-4">
							<div class="row">
								<div class="col-xs-6">
									<p class="h4 h3-lg-down strong mt-0 mb-0 text-right-sm-up">Sale price</p>
								</div>
								<div class="col-xs-6 text-right-sm-up">
									<p class="h4 h3-lg-down strong mt-0 mb-0">£14,142,947.00</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-10 col-md-5 pull-right-sm-up">
						<button type="button" class="btn btn-secondary btn-block mt-2x">Go to Account Dashboard</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		@Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.BottomContent)
	</div>
</div>
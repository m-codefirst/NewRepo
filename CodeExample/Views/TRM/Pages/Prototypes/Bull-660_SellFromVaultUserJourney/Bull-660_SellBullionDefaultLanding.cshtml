@using TRM.Web.Constants
@using TRM.Web.Models.Layouts

@model Hephaestus.CMS.ViewModels.IPageViewModel<TRM.Web.Models.Pages.EcomPrototypePage, Hephaestus.CMS.ViewModels.ILayoutModel>
@{
	var myLayout = Model.Layout as TrmLayoutModel;
	if (myLayout == null)
	{
		throw new InvalidCastException(StringConstants.Layout.InvalidLayout);
	}

	var targetId = Guid.NewGuid();

}
<div class="pageContainer">
	<div class="row">
		@Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.TopContent)
	</div>
	<div class="container mb-4x mt-2x">
		<div class="row">
			<div class="col-xs-12 col-md-8 col-md-offset-2 mb-1x">
				<div class="page-header">
					<h1 class="h1">Sell back to Royal Mint</h1>
				</div>
				<h2 class="h3">We will update funds to your investment wallet once the sale is complete.</h2>
				<h3 class="h6 mb-2x">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</h3>
				<div class="row">
					@Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.MiddleContent)
				</div>
				<div class="checkout-item-block">
					<div class="checkout-item-wrapper">
						<div class="item-image hidden-xs">
							<img src="/Static/img/catalogue/coin-img.jpg">
						</div>
						<div class="item-info">
							<h6 class="h6 mt-0 mb-0">Bullion Coin or Bar Title may well wrap over two lines</h6>
							<p class="text-graylight">Second title line if populated</p>
							<div class="row">
								<div class="clearfix"></div>
								<div class="col-xs-8">
									<strong>Vault Quantity:</strong>
								</div>
								<div class="col-xs-4 text-right">
									10
								</div>
								<div class="clearfix"></div>
								<div class="col-xs-8">
									<strong>Available to Sell:</strong>
									<i class="trmi trmi-question" data-toggle="tooltip" data-placement="top" data-original-title="Title"></i>
								</div>
								<div class="col-xs-4 text-right">
									8
								</div>
							</div>
						</div>
						<div class="item-price flex-align-left-sm-up primary-price">
							<div class="price-info">
								<p class="h6 text-center">Sell Qty</p>
								<div class="h5 mt-0 mb-0">
									<div class="input-group qty-group mb-xs-1x">
										<span class="input-group-btn decrease-btn">
											<button class="btn qty-btn" type="button">
												<i class="trmi trmi-minus"></i>
											</button>
										</span>
										<input type="text" class="form-control text-center qty-input" max="9" placeholder="Qty" value="8">
										<span class="input-group-btn increase-btn">
											<button class="btn qty-btn" type="button">
												<i class="trmi trmi-plus"></i>
											</button>
										</span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="checkout-total">
					<div class="row">
						<div class="col-xs-6 col-sm-4 col-sm-offset-5 text-right-sm-up">
							<strong>Combined Weight in sale (oz)</strong>
						</div>
						<div class="col-xs-6 col-sm-3 text-right-sm-up">
							100
						</div>
						<div class="clearfix"></div>
						<div class="col-xs-6 col-sm-4 col-sm-offset-5 text-right-sm-up">
							<strong>Price per oz including premium</strong>
						</div>
						<div class="col-xs-6 col-sm-3 text-right-sm-up">
							£992.25
						</div>
						<div class="clearfix"></div>
						<hr>
					</div>
					<div class="row center-items-sm-up reorder-sm">
						<div class="col-xs-12 col-sm-6">
							<span class="h6 mt-0 mb-0 coundown-timer inline alert alert-info text-slateblue">
								LIVE Prices valid for <span class="h5" id="coundown-timer">0</span> seconds
							</span>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="row">
								<div class="col-xs-6">
									<p class="h4 h3-lg-down mt-0 mb-0 text-right-sm-up">Sell today for:</p>
								</div>
								<div class="col-xs-6 text-right-sm-up">
									<p class="h4 h3-lg-down mt-0 mb-0">£999,999.00</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-10 col-md-5 pull-right-sm-up">
						<button type="button" class="btn btn-secondary btn-block mt-2x">Sell Now</button>
					</div>
				</div>
			</div>

		</div>
	</div>
	<div class="row">
		@Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.BottomContent)
	</div>	
</div>
<script>
	// Set the date we're counting down to
	var today = new Date();
	var nextDay = new Date();
	nextDay.setDate(today.getDate() + 1);
	var countDownDate = nextDay.getTime();

	var totalSeconds = 180;
	document.getElementById("coundown-timer").innerHTML = totalSeconds;
	// Update the count down every 1 second
	var x = setInterval(function () {
		document.getElementById("coundown-timer").innerHTML = totalSeconds--;
		if (totalSeconds < 0)
			clearInterval(x);
	}, 1000);
</script>
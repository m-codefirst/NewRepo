@using TRM.Web.Constants
@using TRM.Web.Models.Layouts

@model Hephaestus.CMS.ViewModels.IPageViewModel<TRM.Web.Models.Pages.EcomPrototypePage, Hephaestus.CMS.ViewModels.ILayoutModel>
@{
	var myLayout = Model.Layout as TrmLayoutModel;
	if (myLayout == null)
	{
		throw new InvalidCastException(StringConstants.Layout.InvalidLayout);
	}
}
<div class="pageContainer quick-checkout">
	<div class="container mb-4x mt-2x">
		<div class="row">
			<div class="col-xs-12 col-md-8 col-md-offset-2 mb-1x">
				<div class="page-header">
					<h1 class="h1">Quick Checkout</h1>
				</div>
				<h2 class="h2 mt-0 mb-1x">This investment is not available for home delivery</h2>
				<p class="strong header-font-color mb-0">To be Stored in The Royal Mint Vault</p>
				<p>Storage fees apply - to be billed in arrears and paid quarterly. <a href="">Find out more</a></p>
				<p class="alert alert-info pull-right-md-up text-slateblue text-center pl-4x pr-4x mb-1x">
					Price is LIVE
					<i class="trmi trmi-question inline" data-toggle="tooltip" data-placement="top" data-original-title="Title"></i>
				</p>
				<div class="clearfix"></div>
				<div class="checkout-item-block">
					<div class="checkout-item-wrapper">
						<div class="item-image hidden-xs">
							<img src="/Static/img/catalogue/coin-img.jpg">
						</div>
						<div class="item-info">
							<h6 class="h6 mt-0 mb-0">Bullion Coin or Bar Title may well wrap over two lines</h6>
							<p class="text-graylight">Second title line if populated</p>
							<div class="row">
								<div class="col-xs-8">
									<strong>Price per Unit, including premium:</strong>
								</div>
								<div class="col-xs-4 text-right">
									£99.70
								</div>
								<div class="clearfix"></div>
								<div class="col-xs-8">
									<strong>Quantity:</strong>
								</div>
								<div class="col-xs-4 text-right">
									1
								</div>
								<div class="clearfix"></div>
								<div class="col-xs-8">
									<strong>VAT:</strong>
								</div>
								<div class="col-xs-4 text-right">
									<span>
										£19.94
									</span>
								</div>
							</div>
						</div>
						<div class="item-price flex-align-left-sm-up primary-price">
							<div class="price-info">
								<p class="h6 mt-0 mb-0 text-uppercase">Live Price</p>
								<p class="h5 mt-0 mb-0">
									£99.70
								</p>
								<p class="mt-0 mb-0">ex Vat</p>
							</div>
						</div>
					</div>
				</div>
				<div class="checkout-total">
					<div class="row">
						<div class="col-xs-6 col-sm-3 col-sm-offset-6 text-right-sm-up">
							<strong>Sub Total</strong>
						</div>
						<div class="col-xs-6 col-sm-3 text-right-sm-up">
							£99.70
						</div>
						<div class="clearfix"></div>
						<div class="col-xs-6 col-sm-3 col-sm-offset-6 text-right-sm-up">
							<strong>VAT</strong>
						</div>
						<div class="col-xs-6 col-sm-3 text-right-sm-up">
							£19.94
						</div>
						<div class="clearfix"></div>
						<div class="col-xs-6 col-sm-3 col-sm-offset-6 text-right-sm-up">
							<strong>Bullion Delivery</strong>
						</div>
						<div class="col-xs-6 col-sm-3 text-right-sm-up">
							<span class="strong">
								FREE
							</span>
						</div>
						<div class="clearfix"></div>
						<hr>
					</div>
					<div class="row center-items-sm-up">
						<div class="col-xs-12 col-sm-6">
							<span class="h6 mt-0 mb-0 coundown-timer inline alert alert-info text-slateblue">
								LIVE Prices valid for <span class="h5" id="coundown-timer">0</span> seconds
							</span>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="row">
								<div class="col-xs-6">
									<p class="h5 strong mt-0 mb-0 text-right-sm-up">Investment Total</p>
								</div>
								<div class="col-xs-6 text-right-sm-up">
									<p class="h5 strong mt-0 mb-0">£119.64</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<h6 class="h6 mt-20 wallet-balance text-right-sm-up">Available Wallet Balance <span class="text-danger">£40.00</span></h6>
				<hr>
				<button type="button" class="btn btn-secondary pull-right-sm-up mb-1x">Fix Price and Buy Investments</button>
			</div>

		</div>
	</div>

</div>
<script>
	// Set the date we're counting down to
	var today = new Date();
	var nextDay = new Date();
	nextDay.setDate(today.getDate() + 1);
	var countDownDate = nextDay.getTime();

	var totalSeconds = 180;
	document.getElementById("coundown-timer").innerHTML = totalSeconds;
	// Update the count down every 1 second
	var x = setInterval(function () {
		document.getElementById("coundown-timer").innerHTML = totalSeconds--;
		if (totalSeconds < 0)
			clearInterval(x);
	}, 1000);
</script>
@using TRM.Web.Constants
@using TRM.Web.Models.Layouts

@model Hephaestus.CMS.ViewModels.IPageViewModel<TRM.Web.Models.Pages.EcomPrototypePage, Hephaestus.CMS.ViewModels.ILayoutModel>
@{
    var myLayout = Model.Layout as TrmLayoutModel;
    if (myLayout == null)
    {
        throw new InvalidCastException(StringConstants.Layout.InvalidLayout);
    }
}
<div class="pageContainer">

    @if (Model.CurrentPage.DisplayPageHeading)
    {
        <div class="page-header">
            @Html.PropertyFor(m => m.CurrentPage.Heading)
        </div>
    }
    @Html.PropertyFor(m => m.CurrentPage.MainBody)
	<div class="row content-area">
		@Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.TopContent)
	</div>
    <!-- breadcrumb -->
    @Html.Partial("_Breadcrumb", myLayout.Breadcrumb)
    <!-- / breadcrumb -->

    <div class="container productTemplate product-display-page">
        <div class="row">
            <div class="col-xs-12 col-md-7">
                <div class="row">
                    @Html.Partial("BullionPDPCarousel")

                    <!-- pdp usp LG MD -->
                    <div class="variantCTA pdp-usp--lg-md">
						<div class="pdp-usp trm-product-usp col-xs-12 mt-1x mb-5 panel panel-default thumbnail p-1x pl-sm-0x pr-sm-0x pl-xs-0x pr-xs-0x pt-xs-3x">
							<div class="thumbnail text-center p-1x">
								<div class="row pdp-usp--wrapper display-block-xs">
									<div class="col-xs-12 col-sm-6 pdp-usp--item">
										<div class="pdp-usp--bg center-block display-inline-block margin--bottom-10 borders img-circle bg-aquamarine text-white text-uppercase">
											<h2 class="pdp-usp--headline h2 text-center mb-0">Free</h2>
											<p class="pdp-usp--subline mb-0 lead">UK Delivery</p>
										</div>
										<p class="mt-1x">
											This item is available for free UK Delivery. <a href="">International delivery</a> charges still apply.
										</p>
									</div>
									<div class="col-xs-12 col-sm-6 text-center pdp-usp--item">
										<div class="pdp-usp--bg center-block display-inline-block margin--bottom-10 borders img-circle bg-aquamarine text-white text-uppercase mt-xs-1x">
											<h2 class="pdp-usp--headline no-subline h2 text-center mb-0">Vault</h2>
										</div>
										<p class="mt-1x">
											The item is only available for storage in
											<a href="">The Vault</a>, our on-site precious metal storage facility.
										</p>
									</div>
								</div>
							</div>
						</div>
                    </div>
                    <!-- / pdp usp LG MD -->
                </div>
            </div>
            <div class="col-xs-12 col-md-5">
                <div class="variantHeading clearfix w-100">
                    <p class="promoTag">Tag Message</p>
                    <h1 class="h2 mt-0" itemprop="name">Page Title to be placed over two lines max</h1>
                    <h2 class="mt-0 mb-0 text-silver h4">Secondary Product Title</h2>
                </div>

                <div class="variantRating mb-1x">
                    @Html.Partial("BullionPDPReviews")
                </div>

                <p class="variantSubHeading mb-1x">            
                    <span class="text-success display-inline">In Stock</span>
                    <span class="display-inline">|</span>
					<span class="display-inline variantPageInventoryItemsShippingMessage">Shipping within 24 hours</span>
					<span class="display-inline">|</span>
					<span class="display-inline sku">Product Code XXXXX</span>
                </p>

                <div class="pdp-prod-info mt-1x thumbnail p-1x bg-pearl text-center">
                    @Html.Partial("BullionPdpProdInfo")
                </div>

                <div class="variantCTA mt-1x">
                    <div class="row">
                        <div class="col-xs-12">
                            <button class="btn btn-block btn-secondary btn-70-percent">Activate your Bullion account</button>
                        </div>
                    </div>
                </div>

                <div class="pdp-price-table">
                    @Html.Partial("BullionPdpPriceTable")
                </div>

                <div class="variantBullionMessage">
                    @Html.Partial("BullionPDPBullionMessage")
                </div>

                <div class="social-items mb-1x pull-right">
                    @Html.Partial("BullionPDPSocialShare")
                </div>
                <!-- pdp usp SM XS -->
                <div class="variantCTA pdp-usp--sm-xs">
                    @Html.Partial("BullionPdpUsp")
                </div>
                <!-- / pdp usp SM XS -->

                <div class="content-area">
                    <div class="row">
                        @Html.PropertyFor(m => m.CurrentPage.EcomPrototypeContentArea)
                    </div>
                </div>
            </div>

            <div class="col-xs-12">
                <div class="content-area">
                    <div class="row">
                        @Html.PropertyFor(m => m.CurrentPage.ThreeContentAreas.MiddleContent)
                    </div>
                </div>

                <div class="variantDescription">
                    <h2>More Information</h2>
                    <p>

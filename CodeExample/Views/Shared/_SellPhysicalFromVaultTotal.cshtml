@using TRM.Web.Constants
@model TRM.Web.Models.ViewModels.Bullion.SellBullionDefaultLandingViewModel

<input type="hidden" name="PremiumRequestId" id="premium-request" value="@Model.PremiumRequestId" />
<input type="hidden" name="QuantityToSell" id="quantityInOz" value="@Model.SellVariant.QuantityToSellOrDeliver" />
<div class="row">
    <div class="col-xs-6 col-sm-4 col-sm-offset-5 text-right-sm-up">
        <strong>@Html.TranslateFallback(StringResources.CombinedWeightInSale, "Combined Weight in sale (oz)")</strong>
    </div>
    <div class="col-xs-6 col-sm-3 text-right-sm-up">
        @Model.CombinedWeightInSale.ToString("0.###")
    </div>
    <div class="clearfix"></div>
    <div class="col-xs-6 col-sm-4 col-sm-offset-5 text-right-sm-up">
        <strong>@Html.TranslateFallback(StringResources.PricePerOzIncludingPremium, "Price per oz including premium")</strong>
    </div>
    <div class="col-xs-6 col-sm-3 text-right-sm-up">
        @Model.PremiumPricePerOzIncludingPremium.ToString()
    </div>
    <div class="clearfix"></div>
    <hr>
</div>
<div class="row center-items-sm-up">
    <div class="col-xs-12 col-sm-6">
        <span class="h6 mt-0 mb-0 coundown-timer inline alert alert-info text-slateblue">
            LIVE Prices valid for <span class="h5" id="coundown-timer">0</span> seconds
        </span>
    </div>
    <div class="col-xs-12 col-sm-6">
        <div class="row">
            <div class="col-xs-6">
                <p class="h4 strong mt-0 mb-0 text-right-sm-up">@Html.TranslateFallback(StringResources.SellTodayFor, "Sell today for")</p>
            </div>
            <div class="col-xs-6 text-right-sm-up">
                <p class="h4 strong mt-0 mb-0">@Model.SellTotal.ToString()</p>
            </div>
        </div>
    </div>
</div>
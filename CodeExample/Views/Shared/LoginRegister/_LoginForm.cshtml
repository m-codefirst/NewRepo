@model TRM.Web.Models.Layouts.TrmLayoutModel


<div class="mb-2x" id="loginForm-header" ng-show="!showTwoStepAuthentication">
    <h4 class="mt-0 mb-0">@Html.TranslateFallback(TRM.Web.Constants.StringResources.LoginFormHeader, "Already Registered")</h4>
    <h6 class="mt-0">@Html.TranslateFallback(TRM.Web.Constants.StringResources.LoginFormSubHeader, "Login to your account") </h6>
    
    <form class="ng-pristine ng-valid" autocomplete="off" ng-submit="login()">
        <div class="form-group mb-1x input-subtle">
            <input type="text" class="form-control" id="loginEmail1-header" placeholder="@Html.TranslateFallback(TRM.Web.Constants.StringResources.EmailAddressOrUsernamePlaceholder, "Username(Email Address)")*" ng-required="true">
        </div>
        <div class="form-group input-subtle mb-1x">
            <input type="password" class="form-control" id="loginUsrPW1-header" placeholder="@Html.TranslateFallback(TRM.Web.Constants.StringResources.LoginFormPasswordPlaceholder, "Password")*" ng-required="true">
        </div>
        <div ng-if="enhancedMessage" class="row" ng-bind-html="enhancedMessage">
        </div>
        <p ng-cloak ng-hide="!hasError" class="has-error">
            <span class="help-block">{{ loginMessage }}</span>
        </p>
        <div ng-cloak ng-show="showSuccessMsg" class="help-block">
            {{ loginMessage }}
        </div>
        <div class="row mb-1x">
            <div class="col-xs-12 col-md-12"><a href="" data-show="#forgottenUN-header" data-hide="#loginForm-header" class="pw-link pull-right">@Html.TranslateFallback(TRM.Web.Constants.StringResources.LoginFormForgottenUsernameLabel, "Forgotten your Username or Password")</a></div>
        </div>
        <div class="row mb-2x">
            <div class="col-xs-12 col-md-6">
                <button class="btn btn-secondary btn-block" id="login-header" type="submit">
                    <div class="spinner hidden"><div class="bounce1"></div><div class="bounce2"></div><div class="bounce3"></div></div>
                    <span>@Html.TranslateFallback(TRM.Web.Constants.StringResources.LoginFormLoginButtonLabel, "Log in")</span>
                </button>
            </div>
        </div>

    </form>
</div>

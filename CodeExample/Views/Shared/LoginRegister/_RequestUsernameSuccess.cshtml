@using TRM.Web.Constants
@model TRM.Web.Models.Layouts.TrmLayoutModel


<div class="row hidden" id="request-username-successed">
    <a href="" class="hidden" id="login-form-request-username-successed-form" data-show="#request-username-successed" data-hide="#login-form-main"></a>
    <a href="" id="login-form-request-username-successed-login" data-hide="#forgottenUN-header" data-show="#loginForm-header" class="hidden"></a>
    <div class="mb-2x col-xs-12 col-md-11 col-lg-offset-1">
        <h4 class="mt-0 mb-0">@Html.TranslateFallback(StringResources.ForgottenUserNameConfirmationHeading, "Username Requested")</h4>
        <h6 class="mt-0">@Html.TranslateFallback(StringResources.ForgottenUserNameConfirmationSubHeading, "If we recognise your e-mail address your username(s) will be sent by email")</h6>
        <div class="row mb-3x mt-2x">
            <div class="contentArea clear col-xs-12 col-md-11" @Html.EditAttributes(m => m.ForgottenUsernameRequestedContentArea)>
                <div class="row">
                    @Html.DisplayFor(m => m.ForgottenUsernameRequestedContentArea)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-3">
                <a href="" data-hide="#request-username-successed" data-show="#login-form-main" class="gotoLoginBtn pw-link btn btn-secondary btn-block">@Html.TranslateFallback(StringResources.GoToLogin, "Go to Login")</a>
            </div>
            <div class="col-xs-12 col-md-12">
                <a href="/" class="pw-link nav-close" style="position: relative;">@Html.TranslateFallback(StringResources.ReturnToHomePage, "Return to our homepage")</a>
            </div>
        </div>
    </div>
</div>
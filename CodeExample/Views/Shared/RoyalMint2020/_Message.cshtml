@using TRM.Web.Models.ViewModels
@model TRM.Web.Models.ViewModels.MessageViewModel
<div class="message pl-3 pr-3 pt-3 pb-3 my-2">
    <div class="row">
        <div class="pr-1">
            <span class="icon-container">
                <span class="icon">
                    <svg>
                        <use xlink:href="#@Model.Icon"></use>
                    </svg>
                </span>
            </span>
        </div>
        <div class="col">
            @if (!string.IsNullOrWhiteSpace(Model.Title))
            {
                <h3 class="h4 text-left">@Model.Title</h3>
            }
            @Html.PropertyFor(x => x.Body)
            @if (!string.IsNullOrWhiteSpace(Model.Text))
            {
                <p class="mb-0 text-left">@Model.Text</p>
            }
        </div>
    </div>
</div>
